<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    </head>
    <body>
        <div class="page">
            <div class="header"> 
            <div class="shoppingCart">
                <ul>
                    <li>
                        <img src="@Url.Content("~/Content/images/big_users.png")" alt="users" />
                         欢迎光临 Video Mall
                         @{
                            if(this.Request.IsAuthenticated)
                            {   
                                @:,                            
                                @this.User.Identity.Name
                                @Html.ActionLink("[注销]", "SignOut", "Account")
                            }
                             else
                            {
                                RouteValueDictionary routeData = new RouteValueDictionary();
                                routeData.Add("returnUrl", this.Request.Url);
                                @Html.ActionLink("[登录]", "SignIn", "Account", routeData,null);
                            }
                        }
                        
                    </li>
                    <li>
                        <img src="@Url.Content("~/Content/images/shoppingcart.png")" alt="users" />
                        商品数量：@Artech.VideoMall.Models.ShoppingCart.Current.TotalQuantity，总价：￥@Artech.VideoMall.Models.ShoppingCart.Current.TotalPrice 
                        @Html.ActionLink("[查看]", "Index", "Orders")
                    </li>
                </ul>
            </div>
        </div>
            <div class="clear"> </div> 
            <div class="main">@RenderBody()</div> 
        </div>
    </body>
</html>